{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome", // Or "msedge"
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      // Add these overrides:
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*",
        "webpack:///*": "${webRoot}/*"
      }
    }
  ]
}
